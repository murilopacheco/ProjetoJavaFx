                          <ToggleGroup fx:id="groupSexo" />
                      </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioFemea" mnemonicParsing="false" text="Fêmea" toggleGroup="$groupSexo"/>
               </children>
            </HBox>
            <Label layoutX="10.0" layoutY="103.0" text="Data Nascimento:" />
            <DatePicker fx:id="dtDataNascimento" layoutX="116.0" layoutY="99.0" />
            <Label layoutX="76.0" layoutY="143.0" text="Raça:" />
            <ComboBox fx:id="comboRaca" layoutX="116.0" layoutY="139.0" prefWidth="150.0" />
            <Label layoutX="74.0" layoutY="181.0" text="Cor:" />
            <TextField fx:id="txtCor" layoutX="116.0" layoutY="177.0" prefHeight="25.0" prefWidth="184.0" />
            <Button layoutX="333.0" layoutY="230.0" mnemonicParsing="false" onAction="#salvar" text="Salvar" />
         </children></AnchorPane>
  </content>
</TitledPane>
